    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            const isOpen = !menu.classList.contains('invisible');

            if (isOpen) {
                // Close
                menu.classList.add('opacity-0', 'invisible', 'pointer-events-none', 'translate-y-4');
                menu.classList.remove('opacity-100', 'visible', 'pointer-events-auto', 'translate-y-0');
                document.body.classList.remove('overflow-hidden');
            } else {
                // Open
                menu.classList.remove('opacity-0', 'invisible', 'pointer-events-none', 'translate-y-4');
                menu.classList.add('opacity-100', 'visible', 'pointer-events-auto', 'translate-y-0');
                document.body.classList.add('overflow-hidden');
            }
        }

        function toggleDarkMode() {
            const isDark = document.documentElement.classList.toggle('dark');
            localStorage.setItem('dark', isDark);
        }

        const btt = document.getElementById('backToTop');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 500) {
                btt.classList.remove('opacity-0', 'invisible');
                btt.classList.add('opacity-100', 'visible');
            } else {
                btt.classList.add('opacity-0', 'invisible');
                btt.classList.remove('opacity-100', 'visible');
            }
        });
        btt.onclick = () => window.scrollTo({ top: 0, behavior: 'smooth' });
    </script>
