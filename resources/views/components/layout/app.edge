            @apply px-2 py-1 bg-gray-100 dark:bg-dark-border rounded-md font-mono text-sm text-passion-orange-dark dark:text-passion-orange-light;
        }

        .prose-premium pre {
            @apply relative my-10 p-8 bg-gray-900 rounded-[2rem] overflow-x-auto shadow-2xl border border-white/10;
        }

        .prose-premium pre code {
            @apply p-0 bg-transparent text-gray-100 text-sm leading-relaxed;
        }

        .prose-premium img {
            @apply rounded-[2.5rem] shadow-2xl mx-auto my-12 border-4 border-white dark:border-dark-border;
        }

        .prose-premium table {
            @apply w-full mb-10 border-collapse rounded-3xl overflow-hidden shadow-xl;
        }

        .prose-premium th {
            @apply bg-electric-blue text-white p-4 font-black uppercase tracking-widest text-xs text-left;
        }

        .prose-premium td {
            @apply p-4 border-b border-gray-100 dark:border-dark-border dark:bg-dark-card;
        }

        .prose-premium a {
